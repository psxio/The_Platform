# ============================================
# The Platform - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NOTE: Never commit .env to version control!

# ============================================
# REQUIRED - Database Configuration
# ============================================
# Your PostgreSQL/Neon database connection string
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# ============================================
# Server Configuration
# ============================================
# Port for the server (default: 5000)
PORT=5000

# Environment: development | production
NODE_ENV=development

# Session secret for Express sessions (use a strong random string in production)
SESSION_SECRET=your-secret-key-change-this-in-production

# Logging level: error | warn | info | http | debug
LOG_LEVEL=info

# ============================================
# Admin/Authentication Configuration
# ============================================
# Bootstrap admin email for initial super admin access
BOOTSTRAP_ADMIN_EMAIL=admin@example.com

# Initial admin invite code (for first admin registration)
INITIAL_ADMIN_CODE=your-initial-admin-code

# ============================================
# Google Services (Optional)
# ============================================
# Google Service Account Email
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com

# Google Service Account Private Key (entire key including BEGIN/END lines)
# Note: In .env, replace \n with actual newlines or keep as \n
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYourKeyHere\n-----END PRIVATE KEY-----\n"

# Google Sheets ID (for data sync)
GOOGLE_SHEET_ID=your-google-sheet-id

# Google Drive Folder IDs
GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id
GOOGLE_DRIVE_CONTENT_FOLDER_ID=your-content-folder-id

# ============================================
# Email/SMTP Configuration (Optional)
# ============================================
# SMTP server settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@example.com

# ============================================
# Web3/Blockchain Configuration (Optional)
# ============================================
# Etherscan API Key for wallet screening
ETHERSCAN_API_KEY=your-etherscan-api-key

# Twitter/X API Bearer Token for tweet extraction
X_API_BEARER_TOKEN=your-twitter-bearer-token

# ============================================
# AI Services Configuration (Optional)
# ============================================
# Anthropic (Claude) API Configuration
AI_INTEGRATIONS_ANTHROPIC_API_KEY=your-anthropic-api-key
AI_INTEGRATIONS_ANTHROPIC_BASE_URL=https://api.anthropic.com

# ============================================
# Replit-Specific (Only if running on Replit)
# ============================================
# Replit Domain Configuration
# REPLIT_DEV_DOMAIN=your-repl-name.username.repl.co
# REPLIT_DOMAINS=your-repl-name.username.repl.co
# REPL_ID=your-repl-id
# ISSUER_URL=https://replit.com/oidc

# ============================================
# Development Notes
# ============================================
# Minimal setup to get started (only DATABASE_URL is required):
# 1. Copy this file to .env
# 2. Set DATABASE_URL with your database connection
# 3. Optionally set SESSION_SECRET for production
# 4. Run: npm run dev

